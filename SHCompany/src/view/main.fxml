<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>


<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity"
	minHeight="-Infinity" minWidth="-Infinity"
	xmlns="http://javafx.com/javafx/8.0.171"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="control.RootController"
	style="-fx-background-color:#FFFFFF">
	<VBox>
		<children>
			<HBox>
				<children>
					<ImageView layoutX="55" pickOnBounds="true"
						preserveRatio="true">
						<image>
							<Image url="images/main.png" />
						</image>
					</ImageView>
				</children>
			</HBox>

			<HBox alignment="CENTER">
				<children>
					<Button fx:id="btnEmp" layoutX="10" layoutY="270"
						mnemonicParsing="false" style="-fx-background-color:transparent;">
						<graphic>
							<ImageView>
								<image>
									<Image url="@/images/emp.png">
									</Image>
								</image>
							</ImageView>

						</graphic>
						<font>
							<Font size="30.0" />
						</font>
					</Button>

					<Button fx:id="btnSalary" layoutX="125" layoutY="270"
						mnemonicParsing="false" style="-fx-background-color:transparent;">
						<graphic>
							<ImageView>
								<image>
									<Image url="@/images/sal.png">
									</Image>
								</image>
							</ImageView>
						</graphic>
						<font>
							<Font size="30.0" />
						</font>
					</Button>

					<Button fx:id="btnExit" layoutX="240" layoutY="270"
						mnemonicParsing="false" style="-fx-background-color:transparent;">
						<graphic>
							<ImageView>
								<image>
									<Image url="@/images/exit.png">
									</Image>
								</image>
							</ImageView>

						</graphic>
						<font>
							<Font size="30.0" />
						</font>
					</Button>
				</children>
			</HBox>
		</children>
	</VBox>

	<Label layoutX="100" layoutY="370" prefHeight="30.0"
		prefWidth="80.0" text="사원" textAlignment="CENTER" />
	<Label layoutX="270" layoutY="370" prefHeight="30.0"
		prefWidth="80.0" text="급여" textAlignment="CENTER" />
	<Label layoutX="440" layoutY="370" prefHeight="30.0"
		prefWidth="80.0" text="종료" textAlignment="CENTER" />

</AnchorPane>
